Table User {
  _id ObjectId [pk]
  name String
  email String [unique]
  password String
  role String [note: "buyer, seller, admin"]
  address String
  phoneNumber String
  isBanned boolean
  googleId varchar [unique]
  createdAt Date
  updatedAt Date
}

Table UserImage {
  _id ObjectId [pk]
  name String
  path String
  url String
  userId ObjectId [ref: - User._id]
  createdAt Date
  updatedAt Date
}

Table Shop {
  _id ObjectId [pk]
  name String
  description String
  ownerId ObjectId [ref: > User._id]
  address Array
  createdAt Date
  updatedAt Date
}

Table ShopImage {
  _id ObjectId [pk]
  name String
  path String
  url String
  shopId ObjectId [ref: - Shop._id]
  createdAt Date
  updatedAt Date
}

Table ShopBanner {
  _id ObjectId [pk]
  name String
  path String
  url String
  shopId ObjectId [ref: - Shop._id]
  createdAt Date
  updatedAt Date
}

Table Product {
  _id ObjectId [pk]
  name String
  description String
  price Number
  shopId ObjectId [ref: > Shop._id]
  stock Number
  category String
  tag String
  createdAt Date
  updatedAt Date
}

Table ProductImage {
  _id ObjectId [pk]
  name String
  path String
  url String
  productId ObjectId [ref: - Product._id]
  isPrimary Boolean
  createdAt Date
  updatedAt Date
}

Table ProductChat {
  _id ObjectId [pk]
  productId ObjectId [ref: - Product._id]
  userId ObjectId [ref: - User._id]
  message String
  createdAt Date
  updatedAt Date
}