Table Users {
  _id ObjectId [pk]
  name String
  email String [unique]
  password String
  role String [note: "buyer, seller, admin"]
  address String
  phoneNumber String
  isBanned boolean
  googleId varchar [unique]
  createdAt Date
  updatedAt Date
}

Table UserImages {
  _id ObjectId [pk]
  name String
  path String
  url String
  userId ObjectId [ref: - Users._id]
  createdAt Date
  updatedAt Date
}

Table Shops {
  _id ObjectId [pk]
  name String
  description String
  ownerId ObjectId [ref: > Users._id]
  location String
  createdAt Date
  updatedAt Date
}

Table ShopImages {
  _id ObjectId [pk]
  name String
  path String
  url String
  shopId ObjectId [ref: - Shops._id]
  createdAt Date
  updatedAt Date
}

Table ShopBanner {
  _id ObjectId [pk]
  name String
  path String
  url String
  shopId ObjectId [ref: - Shops._id]
  createdAt Date
  updatedAt Date
}

Table Products {
  _id ObjectId [pk]
  name String
  description String
  price Number
  shopId ObjectId [ref: > Shops._id]
  stock Number
  category String
  tag String
  createdAt Date
  updatedAt Date
}

Table ProductImages {
  _id ObjectId [pk]
  name String
  path String
  url String
  productId ObjectId [ref: - Products._id]
  isPrimary Boolean
  createdAt Date
  updatedAt Date
}

Table ProductChat {
  _id ObjectId [pk]
  productId ObjectId [ref: - Products._id]
  userId ObjectId [ref: - Users._id]
  message String
  createdAt Date
  updatedAt Date
}