Table Users {
  _id ObjectId [pk]
  name String
  email String [unique]
  password String
  role String [note: "buyer, seller, admin"]
  address String
  phoneNumber String
  is_banned boolean
  googleId varchar [unique]
  created_at timestamp
  updated_at timestamp
}

Table Shops {
  _id ObjectId [pk]
  name String
  description String
  ownerId ObjectId [ref: > Users._id]
  location String
  createdAt Date
  updatedAt Date
}

Table Products {
  _id ObjectId [pk]
  name String
  description String
  price Number
  shopId ObjectId [ref: > Shops._id]
  stock Number
  category String
  createdAt Date
  updatedAt Date
}

Table UserPictures {
  _id ObjectId [pk]
  name String
  path String
  url String
  UserId ObjectId [ref: - Users._id]
}

Table ProductPictures {
  _id ObjectId [pk]
  name String
  path String
  url String
  UserId ObjectId [ref: - Products._id]
}
